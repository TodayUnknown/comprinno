MINIMUM MAXIMUM

#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    int n;
    long long int flag;
    while (t--)
    {
     cin>>n;
     int a[n];
     for (int i = 0; i < n; i++)
     {
        cin>> a[i];
     }
     sort(a,a+n);
     cout<<1ll*a[0]*(n-1)<<endl;   
    }
    return 0;
}

